<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
    >

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/iv_hot_title"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/tv_hot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_hot_title"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/iv_hot_title"
        android:maxLines="2"
        android:textColor="#333333"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_hot_src"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_hot_title"
        android:layout_alignLeft="@id/tv_hot_title"
        android:textColor="#9B9B9B"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tv_hot_zhiding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_hot_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"

        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_hot_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_hot_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"

        android:textSize="13sp"
        android:visibility="gone"/>


</RelativeLayout>